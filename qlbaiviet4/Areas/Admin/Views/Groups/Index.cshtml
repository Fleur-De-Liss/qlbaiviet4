@model IEnumerable<Models.EF.Group>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="container-fluid px-4">
        <h1 class="mt-4">Quản lý nhóm người dùng</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="~/Admin/Home">Trang chủ</a></li>
            <li class="breadcrumb-item active">Danh sách</li>
        </ol>
        <div class="card mb-4">
            <div class="card-header">
                <p>
                    @Html.ActionLink("Thêm nhóm mới", "Create")
                </p>
            </div>
            <div class="card-body">
                <table id="datatablesSimple">
                    <thead>
                        <tr>
                            <th>Group ID</th>
                            <th>Tên nhóm</th>
                            <th>Manage</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Role ID</th>
                            <th>Tên nhóm</th>
                            <th>Manage</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GroupId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GroupName)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.GroupId }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.GroupId }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.GroupId })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</main>
